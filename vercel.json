{
  "version": 2,
  "builds": [
    {
      "src": "Server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd Client && rm -rf node_modules package-lock.json && npm install --legacy-peer-deps && cd ../Server && rm -rf node_modules package-lock.json && npm install --legacy-peer-deps",
        "buildCommand": "cd Client && npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Server/server.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/Client/static/$1"
    },
    {
      "src": "^/assets/(.*)",
      "dest": "/Client/dist/assets/$1"
    },
    {
      "src": "^/favicon.ico",
      "dest": "/Client/dist/favicon.ico"
    },
    {
      "src": "^/robots.txt",
      "dest": "/Client/dist/robots.txt"
    },
    {
      "src": "^/manifest.json",
      "dest": "/Client/dist/manifest.json"
    },
    {
      "src": "^/(.*)",
      "dest": "/Client/dist/index.html"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
