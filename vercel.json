{
  "version": 2,
  "builds": [
    {
      "src": "Server/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { 
      "src": "/api/(.*)", 
      "dest": "Server/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/Client/dist/$1",
      "headers": {
        "Cache-Control": "s-maxage=31536000, immutable"
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "regions": ["bom1"],
  "public": false,
  "cleanUrls": true,
  "trailingSlash": false
}
